<p id="notice"><%= notice %></p>

<p>
  <strong>Session:</strong>
  <%= @response.session %>
</p>

<p>
  <strong>View:</strong>
  <%= @response.view %>
</p>

<p>
  <strong>Campaign:</strong>
  <%= @response.campaign %>
</p>

<p>
  <strong>Date:</strong>
  <%= @response.created_at.to_formatted_s(:long) %>
</p>

<p>
  <strong>Email:</strong>
  <%= @response.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @response.email %>
</p>

<p>
  <strong>Answers:</strong>

<table>
  <% @response.answers.each do |key, value| %>
    <tr>
      <th><%= key %></th>
      <td>
        <% if value.is_a? Array %>
          <ul>
            <% value.each do |item| %>
              <li style="text-align: left">
                <%= item %>
              </li>
            <% end %>
          </ul>
        <% elsif value.is_a? Hash %>
          <ul>
            <% value.each do |key, value| %>
              <li style="text-align: left">
                <b><%= key %></b>: <%= value %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <%= value %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
</p>

